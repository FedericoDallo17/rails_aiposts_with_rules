# Database
DATABASE_HOST=localhost
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=
DATABASE_NAME=aiposts_development

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
DEVISE_JWT_SECRET_KEY=your-secret-key-change-this-in-production

# CORS
FRONTEND_URL=http://localhost:5173

# Mailer (for development, you can use mailcatcher or letter_opener)
SMTP_ADDRESS=localhost
SMTP_PORT=1025
SMTP_DOMAIN=localhost
SMTP_USERNAME=
SMTP_PASSWORD=
MAILER_DEFAULT_FROM=noreply@aiposts.local

# Active Storage (for production, use S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=aiposts-production

# Application
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# Rate Limiting
RATE_LIMIT_ENABLED=true

